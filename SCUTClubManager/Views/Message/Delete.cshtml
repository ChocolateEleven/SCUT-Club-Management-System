@model SCUTClubManager.Models.Message

@{
    ViewBag.Title = "Delete";
} 

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Message</legend>

    <div class="display-label">Sender</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Sender.Password)
    </div>

    <div class="display-label">Receiver</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Receiver.Password)
    </div>

    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">ReadMark</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ReadMark)
    </div>

