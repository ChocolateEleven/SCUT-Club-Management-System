@model SCUTClubManager.Models.AssetAssignment

@{
    ViewBag.Title = "Details";
}

<h2>物资分配详细</h2>

<fieldset>
    <legend>物资分配</legend>
    
    <div class="display-label">日期</div>
    <div class="display-field">
        @Model.Date.ToString("yyyy年MM月dd日")
    </div>
    
    <div class="display-label">时间段</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Time.TimeName)
    </div>

    <div class="display-label">申请社团</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Club.MajorInfo.Name)
    </div>
    
    <div class="display-label">申请人</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Applicant.Name)
    </div>
    
    <div>
    物资申请
    <table>
        <tr>
            <th>
                名称
            </th>
            <th>
                数量
            </th>
        </tr>
        @foreach(var item in Model.AssignedAssets)
        {
        <tr>
            <td>
                @item.Asset.Name
            </td>
            <td>
                @item.Count
            </td>
        </tr>
        }
    </table>
    </div>
</fieldset>
<p>
    @Html.ActionLink("返回", "Index")
</p>
