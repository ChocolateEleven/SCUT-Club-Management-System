@model SCUTClubManager.Models.Location

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script>
    function showDate(item)
    {
        item.datepicker();
    }

    function addUnavailableTime()
    {
        $("#unavailableTimes").append("<input type='text' name='unavailableWeekday' onclick='showDate($(this))' /> ");
        $("#unavailableTimes").append($("#hiddenList")[0].innerHTML);  
    }
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Location</legend>

        <div class="editor-label">
            场地名
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            场地不可用时间段设置(星期几/时间段)：
        </div>
        <div class="editor-field" id="unavailableTimes">

        </div>

        <input type="button" id="btAddUnavailableTime" onclick="addUnavailableTime()" value="增加"/ >

        <p>
            <input type="submit" value="提交" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div hidden="hidden" id="hiddenList">
    @Html.DropDownList("Time",String.Empty)
</div>