@{
    ViewBag.Title = "社团管理";
}

<script src="/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#enableRecruit").click(function () {
            var is_enabling_recruit = $(this).data('value');

            if (is_enabling_recruit != '') {
                $.post("/Club/EnableRecruit", { "is_enabling": is_enabling_recruit }, function (data) {
                    $('#d1').text("Value From Controller: " + data.value);
                    $('#d2').text("Value From View: " + $('#enableRecruit').data('value'));
                    $("#enableRecruit").text(data.text);
                    $('#enableRecruit').data('value', data.value);
                });
            }
        });
    });
</script>

<h2>社团管理</h2>

@Html.ActionLink("社团事务审批", "List", "ClubApplication", new { page_number = 1, pass_filter = "", search = "", search_option = "", type_filter = "" })
