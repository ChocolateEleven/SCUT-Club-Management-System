@if(Request.IsAuthenticated)
{
    var http_context = HttpContext.Current;
    string complete_name = (http_context.Request.Cookies["LoginUserFullName"] == null ? "" : http_context.Server.UrlDecode(http_context.Request.Cookies["LoginUserFullName"].Values["Name"])) + "(" + User.Identity.Name + ")";
    
    <text>你好， 
    <strong>
            @Html.ActionLink(complete_name, "Details", "User", new { user_name = User.Identity.Name }, new { @class = "NotButton" })
    </strong>!
    [ @Html.ActionLink("登出", "LogOut", "Home", null, new { @class = "NotButton" }) ]</text>
}
else {
    @:[ @Html.ActionLink("登录", "LogIn", "Home", null, new { @class = "NotButton" }) ]
}
