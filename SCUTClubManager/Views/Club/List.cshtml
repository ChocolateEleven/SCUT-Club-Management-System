@model IPagedList<SCUTClubManager.Models.Club>
@{
    ViewBag.Title = "社团列表";
}

<h2>社团列表</h2>

@Html.Partial("_Confirmation")

<script type="text/javascript">
    $(function () {
        deleteConfirm(".DeleteButton", "确定要取缔该社团吗？", "/Club/Delete");
    });
</script>

@if (User.IsInRole("学生"))
{
    <div class="OperationBtn">
        @Html.ActionLink("申请成立新社团", "ApplyNewClub", "ClubApplication")
    </div>
}

@Html.Partial("_SearchBar")

<table class="ContentTable">
    <tr>
        <th>
            @Html.ActionLink("社团名", "List", new { page_number = 1, order = ViewBag.NameOrderOpt, search = ViewBag.Search })
        </th>
        <th>
            @Html.ActionLink("社团等级", "List", new { page_number = 1, order = ViewBag.LevelOrderOpt, search = ViewBag.Search })
        </th>
        <th>
            @Html.ActionLink("总人数", "List", new { page_number = 1, order = ViewBag.MemberCountOrderOpt, search = ViewBag.Search })
        </th>
        <th>
            @Html.ActionLink("成立日期", "List", new { page_number = 1, order = ViewBag.FoundDateOrderOpt, search = ViewBag.Search })
        </th>
        @if (Roles.IsUserInRole("社联"))
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row-@item.Id">
            <td>
                @Html.ActionLink(item.MajorInfo.Name, "Introduction", 
                new { id = item.Id, page_number = Model.PageNumber, order = ViewBag.CurrentOrder, search = ViewBag.Search })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberCount)
                <span class="AdditionalInfo">(+@item.NewMemberCount)</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoundDate)
            </td>
            @if (Roles.IsUserInRole("社联"))
            {
                <td>
                    <a href="#" class="DeleteButton" data-id="@item.Id">取缔</a>
                </td>
            }
        </tr>
    }

</table>

@Html.Partial("_PageNavigation", Model)