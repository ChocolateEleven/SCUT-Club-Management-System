@model IEnumerable<SCUTClubManager.Models.LocationAssignment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Partial("_Confirmation")
<script>
    $(document).ready(function () {
        deleteConfirmAjax(".deleteLink", "确认删除？", "/LocationAssignment/Delete");
    });
</script>
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.Partial("_SearchBar")
</p>

<table>
    <tr>
        <th>
            Date
        </th>
        <th>
            Club
        </th>
        <th>
            Applicant
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr id="row-@item.Id">
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Club.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Applicant.Name)
        </td>
        <td>
            @Html.ActionLink("详情", "Details", new { id = item.Id }) |
            <a href="#" class="deleteLink" data-id="@item.Id">删除</a>
        </td>
    </tr>
}

</table>

@Html.Partial("_PageNavigation", Model)
