@model  IEnumerable<SCUTClubManager.Models.AssignedAsset>

@{
    ViewBag.Title = "AssignedAsset";
}

<h2>AssignedAsset</h2>


@Html.ActionLink("查看未借出","AvailableAsset",new { date = @ViewBag.date, timeId = @ViewBag.timeId})

<table>
    <tr>
        <th>
            名称
        </th>
        <th>
            借出数量
        </th>
        <th>
            借用社团
        </th>
        <th>
            联系人
        </th>
    </tr>

    
@foreach (var item in Model) {
    
    
    <tr>
        <td class="ItemName">
            @Html.DisplayFor(modelItem => item.Asset.Name)
            <input class="ItemId" type="hidden" value ="@item.Id"/>
        </td>
        <td class ="BorrowCount">
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td class="BorrowClub">
            @Html.DisplayFor(modelItem => item.AssetAssignment.Club.MajorInfo.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssetAssignment.Applicant.Name)
        </td>
    </tr>
}
    

</table>